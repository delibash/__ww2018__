{
  "name": "Workspace-App-UI",
  "version": "0.1.0",
  "private": true,
  "proxy": "http://localhost:8050",
  "scripts": {
    "start": "node scripts/start.js",
    "start:remote": "node scripts/start.remote.js",
    "build": "node scripts/build.js",
    "test": "node scripts/test.js --env=jsdom",
    "storybook": "start-storybook -p 9001 -c .storybook",
    "build:staging": "node scripts/build.staging.js"
  },
  "dependencies": {
    "@types/auth0-js": "8.11.2",
    "@types/axios": "^0.14.0",
    "@types/history": "4.7.0",
    "@types/material-ui": "^0.21.1",
    "@types/path-to-regexp": "^1.7.0",
    "@types/node": "^9.4.0",
    "@types/react": "16.4.14",
    "@types/react-dom": "^16.0.3",
    "@types/react-dropzone": "^4.2.2",
    "@types/react-router": "^4.0.31",
    "@types/react-router-dom": "^4.2.5",
    "@types/redux-saga": "^0.10.5",
    "auth0-js": "~9.4.0",
    "autoprefixer": "7.1.6",
    "axios": "^0.17.1",
    "case-sensitive-paths-webpack-plugin": "2.1.1",
    "chalk": "1.1.3",
    "css-loader": "0.28.7",
    "dotenv": "4.0.0",
    "extract-text-webpack-plugin": "3.0.2",
    "file-loader": "0.11.2",
    "fork-ts-checker-webpack-plugin": "^0.2.8",
    "fs-extra": "3.0.1",
    "html-webpack-plugin": "2.29.0",
    "jest": "20.0.4",
    "material-ui": "^0.20.0",
    "object-assign": "4.1.1",
    "path-to-regexp": "^2.2.0",
    "postcss-flexbugs-fixes": "3.2.0",
    "postcss-loader": "2.0.8",
    "promise": "8.0.1",
    "raf": "3.4.0",
    "react": "^16.2.0",
    "react-dev-utils": "4.2.2",
    "react-dom": "^16.2.0",
    "react-dropzone": "5.0.1",
    "react-router": "4.2.0",
    "react-router-dom": "^4.2.2",
    "redux": "^3.7.2",
    "redux-saga": "^0.16.0",
    "source-map-loader": "^0.2.1",
    "style-loader": "0.19.0",
    "sw-precache-webpack-plugin": "0.11.4",
    "title-case": "^2.1.1",
    "ts-jest": "^20.0.7",
    "ts-loader": "^2.3.7",
    "tsconfig-paths-webpack-plugin": "^2.0.0",
    "tslint": "^5.7.0",
    "tslint-react": "^3.2.0",
    "url-loader": "0.6.2",
    "webpack": "3.8.1",
    "webpack-dev-server": ">=3.1.11",
    "webpack-manifest-plugin": "1.3.2",
    "whatwg-fetch": "2.0.3"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^3.4.7",
    "@storybook/react": "^3.4.7",
    "@types/enzyme": "^3.1.8",
    "@types/jest": "^22.2.3",
    "@types/storybook__addon-actions": "^3.0.3",
    "@types/storybook__addon-links": "^3.3.1",
    "@types/storybook__react": "^3.0.7",
    "awesome-typescript-loader": "^4.0.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "moment": "^2.22.2",
    "postcss-font-magician": "^2.2.1",
    "postcss-import": "^11.1.0",
    "postcss-mixins": "^6.2.0",
    "postcss-nested": "^3.0.0",
    "postcss-normalize": "^5.0.0",
    "postcss-preset-env": "^5.1.0",
    "postcss-responsive-type": "^1.0.0",
    "react-addons-test-utils": "^15.6.2",
    "react-docgen-typescript-webpack-plugin": "^1.1.0",
    "react-pdf": "^3.0.5",
    "storybook-react-router": "^1.0.1",
    "ts-jest": "^20.0.14",
    "typescript": "^2.9.2",
    "typings-for-css-modules-loader": "^1.7.0"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "<rootDir>/src/setupTests.ts",
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}"
    ],
    "setupFiles": [
      "<rootDir>/config/polyfills.js"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.ts?(x)",
      "<rootDir>/src/**/?(*.)(spec|test).ts?(x)"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/config/jest/typescriptTransform.js",
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|mjs|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs|ts|tsx)$"
    ],
    "moduleNameMapper": {
      "^react-native$": "react-native-web"
    },
    "moduleFileExtensions": [
      "mjs",
      "web.ts",
      "ts",
      "web.tsx",
      "tsx",
      "web.js",
      "js",
      "web.jsx",
      "jsx",
      "json",
      "node"
    ],
    "globals": {
      "ts-jest": {
        "tsConfigFile": "./tsconfig.test.json"
      }
    },
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "babel": {
    "presets": [
      "react-app"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  }
}
